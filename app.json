{
  "expo": {
    "name": "MobileWordica",
    "slug": "mobilewordica",
    "version": "1.0.1",
    
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "buildNumber": "2",
      "supportsTablet": true,
      "bundleIdentifier": "com.lirimhamiti.mobilewordica",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Wordica needs access to your microphone to recognize your speech.",
        "NSCameraUsageDescription": "Wordica may use the camera for future updates (optional)."
      }
    },
    "android": {
      "versionCode": 2,
      "package": "com.lirimhamiti.mobilewordica",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Wordica to access your microphone."
        }
      ]
    ],
    "extra": {
      "privacyPolicyUrl": "https://wordica-privacy.netlify.app/",
      "eas": {
        "projectId": "ba83a04e-2cd4-402b-a9eb-360ac17fb108"
      }
    },
    "owner": "lirimhamiti"
  }
}
